<?xml version='1.0' encoding='utf-8'?>
<widget id="vn.edu.greenwich.database" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Database</name>
    <description>
        A sample Apache Cordova Database.
    </description>
    <author email="baohnp@fe.edu.vn" href="https://greenwich.edu.vn/">
        Serco Honan
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:+84962242999" />
    <allow-intent href="sms:+84962242999" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
